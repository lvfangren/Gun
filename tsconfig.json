{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "lib",
    "fixtures",
    "examples"
  ]
}
